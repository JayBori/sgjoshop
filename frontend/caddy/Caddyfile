:80 {
  redir https://{host}{uri}
}

{$FRONT_DOMAIN} {
  encode zstd gzip
  handle_path /api* {`n    reverse_proxy {$BACK_API}`n  }
  }
  handle {
    reverse_proxy 127.0.0.1:3000
  }
}

